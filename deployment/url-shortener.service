[Unit]
Description=Url Shortener
After=network.target

[Service]
User=shvajkovskij
WorkingDirectory=/home/shvajkovskij/apps/url-shortener
ExecStart=/home/shvajkovskij/apps/url-shortener/url-shortener
Restart=always
RestartSec=4
StandardOutput=inherit
EnvironmentFile=/home/shvajkovskij/apps/url-shortener/config.env

[Install]
WantedBy=multi-user.target